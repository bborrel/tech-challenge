{% extends 'base.html.twig' %}

{% block title %}Pet{% endblock %}

{% block body %}
    <h1>Pet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pet.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pet.name }}</td>
            </tr>
            <tr>
                <th>Date_of_birth</th>
                <td>{{ pet.dateOfBirth ? pet.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Approximate_age</th>
                <td>{{ pet.approximateAge }}</td>
            </tr>
            <tr>
                <th>Date_of_age_approximation</th>
                <td>{{ pet.dateOfAgeApproximation ? pet.dateOfAgeApproximation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ pet.sex }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pet_index') }}">back to list</a>

    <a href="{{ path('app_pet_edit', {'id': pet.id}) }}">edit</a>

    {{ include('pet/_delete_form.html.twig') }}
{% endblock %}
