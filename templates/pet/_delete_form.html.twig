<form method="post" action="{{ path('app_pet_delete', {'id': id}) }}" onsubmit="return confirm('Are you sure you want to delete this Pet?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">Delete</button>
</form>
