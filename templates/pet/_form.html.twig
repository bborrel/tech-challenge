{% extends 'base.html.twig' %}

{% block title %}
    {% if pet is defined and pet and pet.id  %}Edit Pet{% else %}New Pet{% endif %}
{% endblock %}

{% block body %}
    {% if pet is defined and pet and pet.id %}
        <h1 class="text-2xl font-bold text-white mb-6">Edit Pet {{ pet.name }}</h1>
    {% else %}
        <h1 class="text-2xl font-bold text-white mb-6">Create new Pet</h1>
    {% endif %}

    <div class="max-w-sm bg-gray-800 rounded-lg shadow p-6">
        <twig:PetForm :initialFormData="pet ?? null" />
    </div>

    <div class="mt-6">
        <a href="{{ path('app_pet_index') }}" class="inline-block px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700">Back to list</a>

        {% if pet is defined and pet and pet.id %}
            <div class="mt-4">
                {{ include('pet/_delete_form.html.twig', { id: pet.id }) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
