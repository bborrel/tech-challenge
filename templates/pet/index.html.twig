{% extends 'base.html.twig' %}

{% block title %}Pet index{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold text-white mb-6">Pet index</h1>

    <a href="{{ path('app_pet_new') }}" class="inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Create new</a>

    <div class="overflow-x-auto bg-gray-800 rounded-lg shadow overflow-y-auto relative mt-4">
        <table class="border-collapse table-auto w-full whitespace-no-wrap bg-gray-800 table-striped relative">
            {% set th_class = 'bg-gray-700 sticky top-0 border-b border-gray-600 px-6 py-2 text-gray-200 font-bold tracking-wider uppercase text-xs' %}
            {% set td_class = 'border-dashed border-t border-gray-600 px-6 py-3 group-hover:bg-gray-600 transition-colors' %}
            {% set btn_class = 'px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700' %}
            <thead>
                <tr>
                    <th class="{{ th_class }}">Name</th>
                    <th class="{{ th_class }}">Type</th>
                    <th class="{{ th_class }}">Breed(s)</th>
                    <th class="{{ th_class }}">Age</th>
                    <th class="{{ th_class }}">Sex</th>
                    <th class="{{ th_class }}">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for pet in pets %}
                <tr class="group {% if loop.index is even %}bg-gray-700{% endif %}">
                    <td class="{{ td_class }}">{{ pet.name }}</td>
                    <td class="{{ td_class }}">{{ pet.type.name }}</td>
                    <td class="{{ td_class }}">{{ pet.breedNames|join(', ') }}</td>
                    <td class="{{ td_class }}">{{ pet.age|format_age(short: true) }}</td>
                    <td class="{{ td_class }}">{{ pet.sex.value }}</td>
                    <td class="{{ td_class }}">
                        <div class="flex flex-col md:flex-row gap-1 justify-left">
                            <a href="{{ path('app_pet_show', {'id': pet.id}) }}" class="{{ btn_class }}">Show</a>
                            <a href="{{ path('app_pet_edit', {'id': pet.id}) }}" class="{{ btn_class }}">Edit</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
